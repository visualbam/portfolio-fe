$design-color = #ed5a73;
$development-color = #F9B967;
$link-color = #BA6DDB;

.navigation-drawer .list
    padding: 0;

a
    text-decoration: none;

.vb--logo-container
    background: linear-gradient(to right, hsla(0,0%,0%,0) 0%,hsla(340,81%,67%,0.65) 100%);
    box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
    position: relative;

    .logo
        z-index: 2;
        margin-left: 12px;

    .list__tile__action
        z-index: 3;

    &:after
        background-image: url("../assets/nav-bg.png");
        background-size: cover;
        content: "";
        opacity: 0.75;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        position: absolute;
        z-index: 1;

    .list a
        color: white!important;

.vb--logo-container .icon
    color: white!important;

    &:hover
        background: none;

.navigation-drawer > .list:not(.list--dense) .vb--logo-container .list__tile:hover
    background: none!important;

.list__tile__title
    text-transform: uppercase!important;
    font-size: 0.85rem;

.list__tile__action
    min-width: 40px;

aside.navigation-drawer
    border-left: 4px solid #ED5A73;
    background: #151030!important;

    .list
        background: #151030!important;

        .icon
            font-size: 1.5rem;
        .icon, a
            color: #4F306C;

    .list a.list__tile
        transition: all 0.3s ease;
        background: #151030;

    .list a:hover .icon
        color: #BA6DDB;

    .list a:hover .list__tile__title
        color: white;

.router-link-active .list__tile
    background: linear-gradient(to right, rgba(0,0,0,0) 0%,rgba(125,52,80,0.65) 100%)!important;
    color: white!important;

.router-link-active .icon
    color: #BA6DDB!important;

.toolbar
    box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)!important;
    //border-bottom: 1px solid #d3d3d3;
    //box-shadow: none;

.tabs__slider
    height: 4px;

.toolbar__content
    height: 64px!important;

.vb--logo-container
    //background: lightgreen;
    height: 64px;
    display: flex;

    .list__tile
        margin-top: 8px;

    .list__tile__content
        overflow: inherit;

    img
        margin-top: 4px;
        width: 100px;

h1
    color: white;
    text-align: center;
    text-transform: uppercase;
    font-size: 12px;

.content--wrap
    background: url('../assets/trianglify.svg');
    background-size: cover;

.page
    padding: 1rem;

// cards
.card__actions
    background: hsla(248, 95, 8, 1);
    padding: 4px 0;
    .btn__content
        font-size: 12px;
        font-weight: bold;
        .icon
            font-size: 18px;

.grey--text
    font-size: 12px;
    text-transform: uppercase;

.headline
    color: white;
    font-size: 18px!important;
    line-height: 1.5!important;
    font-weight: bold;
    transition:all 0.25s ease;
    text-transform: capitalize!important;

.design
    .btn__content
        color: $design-color;
    .headline:hover
        color: $design-color;

.development
    .btn__content
        color: $development-color;
    .headline:hover
        color: $development-color;

.card__title
    background: hsla(248, 47, 13, 1);

// pagination
.pagination__item--active.primary
    background: $link-color!important;

.blog
    .card
        position: relative;

    .card__title
        padding-bottom: 60px;

    .card__actions
        position: absolute;
        bottom: 0;
        width: 100%;

.tabs__container
    height: 64px;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-flex: 1;
    -ms-flex: 1 0 auto;
    flex: 1 0 auto;
    .tabs__div
        flex: 1 0 auto;


.resume
    h2
        font-size: 28px;
        line-height: 1;
    p
        font-size: 1.25rem;
        margin-bottom: 3rem;

    img
        max-width: 175px;
        margin: 0 auto;
        display: block;
    .grey--text
        color: $link-color!important;
    .company-logo
        opacity: 0.65;
        transition: opacity 0.25s ease;
        &:hover
            opacity: 1;
    .flex:first-child
        img
            max-width: 75px;
    .list__tile:hover
        .list__tile__title, .list__tile__sub-title
            transition: all 0.25s ease;
            color: $link-color;

.v {
    &--fade {
        &-enter-active,
        &-leave-active { transition: all 275ms cb() }

        &-enter,
        &-leave-to { opacity: 0 }

        &-leave,
        &-enter-to { opacity: 1 }
    }

    &--mask {
        &-enter-active,
        &-leave-active { transition: all 150ms cb() 500ms }

        &-enter,
        &-leave-to { opacity: 0 }

        &-leave,
        &-enter-to { opacity: 1 }
    }
}

.post {
    padding: 0 1.25rem 0;
    background-color: white;
    transform: translate3d(0, 0, 0);

    &-enter-active { transition: all 375ms ease-out 225ms }
    &-leave-active { transition: all 300ms ease-in }

    &-enter,
    &-leave-to {
        opacity: 0;
        transform: translate3d(100%, 0, 0);
    }

    @media (--laptop) {
        position: fixed;
        top: 0;
        left: calc(100% / 3 + 3.25rem);
        width: calc(100% / 1.5 - 3.25rem);
        height: 100%;
        padding: 10rem 5rem 5rem 0;
        overflow-y: scroll;

        &-enter-active { transition: all 525ms ease-out 225ms }
        &-leave-active { transition: all 350ms ease-in }

        &-enter,
        &-leave-to {
            opacity: 0;
            transform: translate3d(100%, 0, 0);
        }
    }

    @media (--monitor) {
        width: 62rem;
        left: calc(50% - 12rem);
    }

    &__header {
        @media (--tablet) {
            position: absolute;
            bottom: 100%;
            right: 0;
            width: 50vw;
            height: calc(70vw - 2.5rem);
            display: flex;
            flex-direction: column;
            padding-right: 2.5rem;
            padding-bottom: 2.5rem;
        }

        @media (--laptop) {
            position: static;
            width: auto;
            height: auto;
            display: block;
            margin-bottom: 1.25rem;
            padding-bottom: 0;
        }
    }

    &__title {
        display: none;

        @media (--tablet) {
            display: block;
            color: black
            margin-bottom: .75rem;
            padding-left: 1.25rem;
        }
    }

    &__meta {
        display: none;

        @media (--tablet) {
            display: block;
            margin-bottom: 1.25rem;
            padding-left: 1.25rem;
            padding-bottom: 1.25rem;
        }

        @media (--laptop) {
            border-bottom: 1px solid cc(border);
        }
    }

    &__sep {
        display: block;
        height: .625rem;

        @media (--laptop) {
            display: inline-block;
            margin: 0 .5rem;

            &::before {
                content: 'â€”';
            }
        }
    }

    &__subtitle {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 0 2.5rem 1.25rem 2.5rem;

        @media (--tablet) {
            padding-top: 1.25rem;
        }

        @media (--laptop) {
            padding-right: 7.5rem;
        }
    }

    &__body {
        padding: 1.25rem 1.25rem 3.75rem;
        border-bottom: 1px solid black;

        @media (--laptop) {
            padding: 0 1.25rem 2.5rem;
        }
    }

    &__footer {
        margin-top: 3.75rem;
        padding: 0 1.25rem;
    }
}